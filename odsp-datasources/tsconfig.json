{
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "typeRoots": [
      "typings-custom"
    ],
    "types": [
      "chai",
      "es6-promise",
      "es6-workaround",
      "mocha",
      "whatwg-fetch",
      "whatwg-streams"
    ]
  },
  "exclude": [
      "node_modules",
      "dist",
      "lib",
      "lib-amd"
  ]
}
