{
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "typeRoots": [
      "../common/temp/node_modules/@types",
      "typings-custom"
    ],
    "types": [
      "chai",
      "es6-promise",
      "es6-workaround",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd"
  ]
}