{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "jsx": "react",
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings-custom"
        ]
    },
    "include": [
        "src/local/**/*.ts*"
    ]
}