{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "jsx": "react",
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings-custom"
        ],
        "types": [
            "chai",
            "mocha",
            "requirejs",
            "sinon"
        ]
    },
    "include": [
        "src/local/**/*.ts*",
        "src/test/**/*.ts*"
    ]
}
