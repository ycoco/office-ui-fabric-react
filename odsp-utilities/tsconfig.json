{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "jsx": "react",
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "types": [
            "chai",
            "mocha",
            "requirejs",
            "sinon",
            "@ms/aria-private"
        ]
    },
    "include": [
        "src/local/**/*.ts*",
        "src/test/**/*.ts*"
    ]
}
