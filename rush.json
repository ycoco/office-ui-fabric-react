{
  "npmVersion": "4.5.0",
  "rushMinimumVersion": "3.0.12",
  "nodeSupportedVersionRange": ">=4.3.0 <8.0.0",
  "projectFolderMinDepth": 1,
  // The gitPolicy enforces that everyone is using a mailable, "@microsoft.com" email address
  // This is used by downstream repositories (such as sp-client) to send targeted emails
  // when evergreen consumes newer versions of the packages in sp-client 
  "gitPolicy": {
    "allowedEmailRegExps": [
      "[^@]+@microsoft\\.com"
    ],
    "sampleEmail": "mrexample@microsoft.com"
  },
  "projects": [
    {
      "packageName": "@ms/odc-core",
      "projectFolder": "odc-core",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-build",
      "projectFolder": "odsp-build",
      "shouldPublish": false
    },
    {
      "packageName": "@ms/odsp-datasources",
      "projectFolder": "odsp-datasources",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-graph",
      "projectFolder": "odsp-graph",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-highcharts",
      "projectFolder": "odsp-highcharts",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-list-utilities",
      "projectFolder": "odsp-list-utilities",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-shared",
      "projectFolder": "odsp-shared",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-shared-react",
      "projectFolder": "odsp-shared-react",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-shared-sharing",
      "projectFolder": "odsp-shared-sharing",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/odsp-utilities",
      "projectFolder": "odsp-utilities",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/sp-css-api",
      "projectFolder": "sp-css-api",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/spo-core",
      "projectFolder": "spo-core",
      "shouldPublish": true
    },
    {
      "packageName": "@ms/web-bootloader",
      "projectFolder": "web-bootloader",
      "shouldPublish": true
    }
  ]
}